{
  "name": "appointment_tracker",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "dist",
      "node_modules"
    ],
    "ext": "ts",
    "exec": "npm run build && cp -r dist/* /var/www/html/js/",
    "legacyWatch": true
  },
  "devDependencies": {
    "@types/node": "^20.14.14",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
  }
}
